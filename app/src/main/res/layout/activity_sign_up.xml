<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e24737"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context="android.trill.com.trill.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp">

        <ViewAnimator
            android:id="@+id/viewanimator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include

                layout="@layout/sign_up_part1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/sign_up_part2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/sign_up_part3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </ViewAnimator>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.CardView

            android:id="@+id/next"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="nextpage"
            app:cardBackgroundColor="#1565c0"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nextpagetest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="next"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/nextpagetest"
                    android:src="@drawable/ic_go" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imga1"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:src="@drawable/fill_layout_colorblue" />

            <ImageView
                android:id="@+id/imga2"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:src="@drawable/fill_layout_colorwhite" />

            <ImageView
                android:id="@+id/imga3"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:src="@drawable/fill_layout_colorwhite" />

            <ImageView
                android:id="@+id/imga4"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:src="@drawable/fill_layout_colorwhite" />

            <ImageView
                android:id="@+id/imga5"
                android:layout_width="30dp"
                android:layout_height="5dp"
                android:src="@drawable/fill_layout_colorwhite" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
